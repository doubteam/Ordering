<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal" 
    >
    <TextView 
        android:id="@+id/fragment_order_txt_location"
        android:layout_width="0dp"
        android:layout_weight="6"
        style="?android:attr/textAppearanceSmall"
        android:layout_height="30dp"
        />

    <Button
        android:id="@+id/fragment_order_btn_refreshlocation"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1" 
        android:text="@string/fragment_order_btn_refreshlocation"
        android:textSize="12sp"
        />

    </LinearLayout>
    <com.normal.ordering.tools.MyListView
        android:id="@+id/fragment_order_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        />
</LinearLayout>
